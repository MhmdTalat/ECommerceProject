@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Adjust to match your layout path
}

<h2>Checkout</h2>

<div class="checkout-summary">
    <!-- Display the total amount -->
    <p>You are about to pay <strong>@ViewBag.TotalAmount.ToString("C") USD</strong> for your order.</p>

    <!-- Display the discount if applicable -->
    @if (ViewBag.Discount > 0)
    {
        <p><strong>Total Discount Applied:</strong> @ViewBag.Discount.ToString("C")</p>
        <p><strong>Total after Discount:</strong> @ViewBag.FinalAmount.ToString("C")</p>
    }
    else
    {
        <p><strong>No discount applied.</strong></p>
    }

    <!-- Payment button -->
    <form method="post" action="@Url.Action("Checkout", "Payment")">
        <button type="submit" class="btn btn-primary">Proceed to Payment</button>
    </form>
</div>

<style>
    .checkout-summary {
        margin-top: 20px;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

        .checkout-summary p {
            font-size: 16px;
            margin: 10px 0;
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 10px 20px;
        font-size: 16px;
        color: white;
        border-radius: 5px;
        text-transform: uppercase;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>
