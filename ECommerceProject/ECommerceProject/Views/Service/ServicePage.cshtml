@{
    ViewData["Title"] = "Service Page";
}

<div class="container my-5">
    <div class="text-center">
        <h1 class="mb-4">@ViewData["Title"]</h1>
    </div>

    @if (User.IsInRole("Admin"))
    {
        <div class="bg-light p-4 rounded shadow-sm">
            <h2 class="text-primary">Welcome, Admin!</h2>
            <p class="text-muted">Manage users, roles, and feedback with ease.</p>

            <div class="d-grid gap-3 my-4">
                <a class="btn btn-primary" asp-action="SubmitFeedback" asp-controller="Feedback">Submit Feedback</a>
                <a class="btn btn-secondary" asp-action="FeedbackList" asp-controller="Feedback">View Feedback</a>
                <a class="btn btn-primary" asp-action="Addadmin" asp-controller="Account">Add Admin</a>
                <a class="btn btn-secondary" asp-action="Addadnewtrader" asp-controller="Trader">Add Trader</a>
               
                <a class="btn btn-primary" asp-action="Index" asp-controller="Role">List Roles</a>
                <a class="btn btn-secondary" asp-action="New" asp-controller="Role">Add New Role</a>
                <a class="btn btn-primary" asp-action="Index" asp-controller="AdminCart">User Carts</a>
                <a class="btn btn-secondary" asp-action="ListUsers" asp-controller="Account">List Users</a>
                <a class="btn btn-primary" asp-action="Index" asp-controller="Category">Category List</a>
            </div>
        </div>
    }

    @if (User.IsInRole("Trader"))
    {
        <div class="bg-light p-4 rounded shadow-sm mt-5">
            <h2 class="text-primary">Welcome, Trader!</h2>
            <p class="text-muted">Manage your trader-related activities.</p>
            <a class="btn btn-primary mt-3" asp-action="Addadnewtrader" asp-controller="Trader">Add Trader</a>
        </div>
    }
</div>
<style>
        .container {
        max-width: 800px;
        margin: auto;
    }

    h1, h2 {
        font-weight: bold;
    }

    a.btn {
        font-size: 1rem;
    }

</style>