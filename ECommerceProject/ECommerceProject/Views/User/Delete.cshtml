@model ECommerceProject.Models.ApplicationUser

@{
    ViewData["Title"] = "Delete User";
}

<h1>Delete User</h1>

<div>
    <h3>Are you sure you want to delete the user: <strong>@Model.UserName</strong>?</h3>
    <p><strong>Email:</strong> @Model.Email</p>

    <form method="post" asp-action="DeleteConfirmed" asp-route-username="@Model.UserName">
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a href="@Url.Action("Index", "User")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
