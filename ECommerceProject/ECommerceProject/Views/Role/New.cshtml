@model ECommerceProject.ViewModels.RoleViewModel

@{
    ViewData["Title"] = "New Role";
}
 

<div class="container d-flex justify-content-center align-items-center" style="min-height: 50vh;">
    <div class="box-style p-4">
        <h1 class="text-center">Create New Role</h1>

         
        <hr />

        <div class="text-center mx-auto" style="max-width: 600px;">
            <form asp-action="New">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="RoleName" class="control-label"></label>
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-warning"></span> <!-- Changed to 'text-warning' -->
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>

        <div class="mt-3 text-center">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
 
