<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DoToList</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DoToList.styles.css" asp-append-version="true" />

    <style>
        /* Global Dark Theme */
        body {
            background-color: #121212;
            color: #f1f1f1;
        }

        /* Navbar Styling */
        .navbar {
            background: linear-gradient(135deg, #ff8c00, #ff4500);
            box-shadow: 0px 4px 10px rgba(255, 140, 0, 0.2);
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
            color: #fff !important;
        }

        .navbar-nav .nav-link {
            font-size: 1.1rem;
            padding: 0.7rem 1rem;
            color: rgba(255, 255, 255, 0.8);
            transition: color 0.3s ease, transform 0.2s ease;
        }

            .navbar-nav .nav-link:hover,
            .navbar-nav .nav-link.active {
                color: #ffeb3b;
                transform: scale(1.1);
            }

        /* Logout Button */
        .logout-btn {
            background: none;
            border: none;
            color: rgba(255, 255, 255, 0.8);
            font-size: 1.1rem;
            padding: 0.7rem 1rem;
            cursor: pointer;
            transition: color 0.3s ease, transform 0.2s ease;
        }

            .logout-btn:hover {
                color: #ffeb3b;
                transform: scale(1.1);
            }

        /* Main Content Styling */
        main {
            min-height: 75vh;
            padding-top: 20px;
            animation: fadeIn 0.4s ease-in-out;
        }

        /* Centered Form */
        .form-container {
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
            border-radius: 8px;
            background: #1e1e1e;
            color: white;
            box-shadow: 0px 4px 10px rgba(255, 140, 0, 0.2);
        }

        /* Buttons */
        .btn-primary {
            background-color: #ff8c00;
            border: none;
            transition: background 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #ff4500;
            }

        /* Footer Styling */
        footer {
            background: #222;
            border-top: 3px solid #ff8c00;
            color: #fff;
        }

            footer p {
                margin: 0;
                font-size: 0.95rem;
            }

            footer a {
                text-decoration: none;
                color: #ff8c00;
                transition: color 0.3s ease;
            }

                footer a:hover {
                    color: #ff4500;
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">DoToList</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="logout-btn">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-5 pt-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="text-muted py-3 text-center">
        <div class="container">
            <p>&copy; @DateTime.Now.Year - DoToList | <a href="#">Privacy</a> | <a href="#">Contact</a></p>
            <p style="color: orange;">Prepared by <strong>Eng. Muhammed Tallat</strong></p>

        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
